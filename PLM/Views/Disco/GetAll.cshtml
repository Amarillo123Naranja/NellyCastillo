@model ML.Disco
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAll</h2>

<hr />

<a href="@Url.Action("Form", "Disco")" class="btn btn-warning">Agregar</a>

<hr />


<div class="container">

    <table class="table table-danger table-striped">

        <thead class="table table-danger">

            <tr class="table table-warning">

                <th>Id Disco</th>
                <th>Titulo</th>
                <th>Artista</th>
                <th>Genero Musical</th>
                <th>Duracion</th>
                <th>Año</th>
                <th>Distribuidora</th>
                <th>Ventas</th>
                <th>Disponibilidad</th>
                <th>Actualizar</th>
                <th>Eliminar</th>


            </tr>

        </thead>

        <tbody>

            @foreach (ML.Disco disco in Model.Discos)
            {

                <tr>
                    <td>@disco.IdDisco</td>
                    <td>@disco.Titulo</td>
                    <td>@disco.Artista</td>
                    <td>@disco.GeneroMusical</td>
                    <td>@disco.Duracion</td>
                    <td>@disco.Año</td>
                    <td>@disco.Distribuidora</td>
                    <td>@disco.Ventas</td>
                    <td>@disco.Disponibilidad</td>
                    <td><a class="btn btn-warning" href="@Url.Action("Form", "Disco", new { IdDisco = disco.IdDisco })">Actualizar</a></td>
                    <td><a class="btn btn-info" href="@Url.Action("Delete", "Disco", new { IdDisco = disco.IdDisco })" onclick="return confirm('Estas seguro que deseas ELIMINAR este REGISTRO');">Eliminar</a></td>



                </tr>

            }


        </tbody>


    </table>

</div>


